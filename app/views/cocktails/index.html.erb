<%= link_to "Back to landing", root_path,class: "btn btn-flat" %>
<% for i in @cocktails %>
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
  <%= link_to i.name, cocktail_path(i.id),class: "btn btn-flat"  %>
</div>

<%= link_to "delete", cocktail_path(i), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-flat" %>
<% end %>
<%= link_to "Create new Cocktail", new_cocktail_path, class: "btn btn-flat" %>
